{
    "name": "water_detection",
    "description": "Binary water body detection from satellite imagery",
    
    "model": {
        "arch": "unet",
        "encoder": "resnet50",
        "pretrained": "imagenet",
        "in_channels": 3,
        "num_classes": 1
    },
    
    "training": {
        "epochs": 100,
        "batch_size": 8,
        "lr": 0.0001,
        "weight_decay": 0.0001
    },
    
    "optimizer": "adamw",
    "scheduler": "plateau",
    "loss": "dice",
    
    "data": {
        "patch_size": 256,
        "stride": 128,
        "filter_empty": true
    }
}
