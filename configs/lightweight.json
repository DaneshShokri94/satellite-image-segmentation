{
    "name": "lightweight",
    "description": "For systems with limited GPU memory (4-6 GB)",
    
    "model": {
        "arch": "unet",
        "encoder": "mobilenet_v2",
        "pretrained": "imagenet",
        "in_channels": 3,
        "num_classes": 1
    },
    
    "training": {
        "epochs": 100,
        "batch_size": 4,
        "lr": 0.0001,
        "weight_decay": 0.0001
    },
    
    "optimizer": "adamw",
    "scheduler": "plateau",
    "loss": "dice",
    
    "data": {
        "patch_size": 256,
        "stride": 128,
        "filter_empty": true
    },
    
    "system": {
        "amp": true,
        "num_workers": 4
    }
}
