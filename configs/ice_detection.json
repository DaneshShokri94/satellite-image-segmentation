{
    "name": "ice_detection",
    "description": "Ice/water classification for river and sea ice mapping",
    
    "model": {
        "arch": "unetplusplus",
        "encoder": "resnet50",
        "pretrained": "imagenet",
        "in_channels": 3,
        "num_classes": 1
    },
    
    "training": {
        "epochs": 100,
        "batch_size": 8,
        "lr": 0.0001,
        "weight_decay": 0.0001
    },
    
    "optimizer": "adamw",
    "scheduler": "plateau",
    "loss": "focal",
    "focal_gamma": 2.0,
    
    "data": {
        "patch_size": 256,
        "stride": 128,
        "filter_empty": true
    },
    
    "note": "Focal loss helps with class imbalance common in ice detection"
}
